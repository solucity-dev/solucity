# EditorConfig ayuda a mantener estilos consistentes entre distintos editores e IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Archivos Markdown (no borrar espacios al final de las líneas porque rompen formatos)
[*.md]
trim_trailing_whitespace = false

# Archivos YAML (útiles para config de CI/CD)
[*.yml]
indent_size = 2

# Archivos JSON y TS/JS
[*.{json,js,jsx,ts,tsx}]
indent_size = 2

# Archivos CSS/SCSS
[*.{css,scss}]
indent_size = 2
