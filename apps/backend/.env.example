# ===============================
# Solucity Backend - .env.example
# ===============================

# ====== Básicos del servidor ======
PORT=3000
NODE_ENV=development

# Orígenes permitidos para CORS (coma separada)
# En producción: poné el dominio real del admin-web / web (si aplica)
CORS_ORIGIN=http://localhost:19006,http://localhost:3000

# Base pública para armar URLs absolutas (ej: /uploads -> https://api.tuapp.com/uploads)
PUBLIC_BASE_URL=http://localhost:3000

# ====== Base de datos (PostgreSQL) ======
# NO pongas credenciales reales acá
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public

# ====== Seguridad / JWT ======
# secreto fuerte en producción
JWT_SECRET=CHANGE_ME_SUPER_SECRET
JWT_EXPIRES_IN=7d

# (Opcional) nivel de logs propio si lo usás en tu código
LOG_LEVEL=debug

# ====== Rate limiting ======
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=20
ADMIN_AUTH_RATE_LIMIT_MAX=10

# ====== Morgan ======
# (Si en algún momento lo usás configurable)
LOG_FORMAT=dev

# ====== Sistema / eventos ======
# ID de un usuario "system" (si lo usás para order events). En prod debería existir.
SYSTEM_ACTOR_ID=

# ====== Admin demo (si usás login admin por env) ======
ADMIN_EMAIL=
ADMIN_PASSWORD=

# ====== Seed Admin endpoint ======
# IMPORTANTE:
# - En PROD, dejalo vacío o en false (no habilitar)
# - Si lo habilitás en staging: ENABLE_ADMIN_SEED=true y poné un token fuerte
ENABLE_ADMIN_SEED=false
SEED_TOKEN=CHANGE_ME_SEED_TOKEN
SEED_DEMOS=false

# ====== MercadoPago (si lo usás) ======
MP_ACCESS_TOKEN=

# ====== Mail (si lo usás) ======
# Si tenés mail fake/local:
MAIL_TRANSPORT=fake
# Si usás SMTP en prod (completá):
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ====== Resend (si lo usás) ======
RESEND_API_KEY=

# ====== Otros (si aparecen en tu backend) ======
# GOOGLE_MAPS_API_KEY=
# EXPO_ACCESS_TOKEN=

