//apps/backend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "express"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "prisma/**/*.ts"]
}
