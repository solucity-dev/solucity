{
  "name": "solucity-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "pnpm --filter @solucity/mobile start",
    "start:prod": "pnpm --filter @solucity/mobile start:prod",
    "android": "pnpm --filter @solucity/mobile android",
    "ios": "pnpm --filter @solucity/mobile ios",
    "web": "pnpm --filter @solucity/mobile web",
    "typecheck": "pnpm --filter @solucity/mobile typecheck",
    "lint": "pnpm --filter @solucity/mobile lint",
    "format": "pnpm --filter @solucity/mobile format",
    "format:check": "pnpm --filter @solucity/mobile format:check",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-universe": "^15.0.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  }
}
