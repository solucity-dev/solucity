{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"], // ðŸ‘ˆ sin "DOM" para evitar choques con RN
    "jsx": "react-jsx", // ðŸ‘ˆ habilita JSX en .tsx
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": false,
    "types": ["react", "react-native"], // ðŸ‘ˆ sin "node" aquÃ­
    "skipLibCheck": true, // ðŸ‘ˆ evita conflictos de tipos en dependencias
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
